{
  "name": "@omnimodel/cli-test-suite",
  "version": "1.0.0",
  "description": "Comprehensive test suite for OmniModel CLI",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:unit": "jest core/",
    "test:integration": "jest providers/",
    "test:e2e": "jest cli/",
    "test:performance": "jest performance/",
    "test:edge-cases": "jest edge-cases/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --passWithNoTests"
  },
  "jest": {
    "setupFilesAfterEnv": ["<rootDir>/setup.js"],
    "testEnvironment": "node",
    "transform": {},
    "testMatch": ["**/*.test.js"],
    "collectCoverageFrom": [
      "packages/*/src/**/*.{js,ts}",
      "!packages/*/src/**/*.d.ts",
      "!packages/*/src/**/__mocks__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testTimeout": 30000,
    "verbose": true
  },
  "dependencies": {},
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "keywords": ["omniform", "omnimodel", "ai", "cli", "testing"],
  "author": "OmniModel Team",
  "license": "Apache-2.0"
}
